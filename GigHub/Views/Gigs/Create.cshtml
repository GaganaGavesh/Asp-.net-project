@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a Gig</h2>
@*"Gigs" Controller ekee "Create" action ekata thama uyanne form eka submit kalama*@
@using (Html.BeginForm("Create", "Gigs"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Venue)
        @*class eka @ sign ekakin patanganne class kiyana eka c# wala reserved key word ekak nisa*@
    </div>
    <div class="form-group">
        @*methana api gig model ele tyna widiyatama datetime kiyala danawa nam view model ekak hadanna ona nee
            eth apata e deka separate karala ganna ona nam view model ekak hadanna wenawa.eka ape domain ekata balapanne ne
            eka ape db ekata balappanne ne. eka ganne ape model ekai me tyna view ekai atarata atharamadiyek wela data tika
            ganna saha yawanna udaw karana eka witharai.view model ekata ethakota apita onama model ekakin data load karanna ahaki.

            view model eka api me view ekata use karanawanam api eka @model GigHub.ViewModels...... kiyala dannona*@
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), " ", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genre)
        @*Sorce of data   "Id"-Value of selection "Name"-display value " "-for default seleted eliment*@
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
